        <activity android:name=".Activity.AdministradorActivity" />
        <activity android:name=".Activity.ListaProdutosActivity" />
        <activity android:name=".Activity.ListaPedidosActivity" />
        <activity android:name=".Activity.ConfiguracaoClienteActivity" />
