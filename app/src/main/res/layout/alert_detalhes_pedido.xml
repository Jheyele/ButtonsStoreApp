<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dados Cliente"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAlertAdminNomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Cliente"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtAlertAdminEnderecoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Endereco Cliente"
                android:layout_marginTop="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30sp">

            <TextView
                android:id="@+id/txtAlertAdminContatoCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contato Cliente"
                android:layout_marginTop="10sp"/>

        </LinearLayout>


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnAlertAdminDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Imagem"
            app:bootstrapBrand="success"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_margin="5sp"/>


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnAlertAdminStatusPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mudar Status"
            app:bootstrapBrand="warning"
            app:bootstrapSize="xl"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true"
            android:layout_margin="5sp"/>

    </LinearLayout>
</LinearLayout>