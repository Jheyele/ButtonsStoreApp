<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CadastroClienteActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Cadastro de Cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadNome"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:layout_width="match_parent"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"
                android:inputType="textCapWords"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadTelefone"
                android:hint="Telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"
                android:inputType="textCapWords"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estado"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"
                android:inputType="textCapWords"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadRua"
                android:hint="Logradouro, n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"
                android:inputType="textCapWords"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadBairro"
                android:hint="Bairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"
                android:inputType="textCapWords"/>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadEmail"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadSenha"
                android:hint="Senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/cadSenha2"
                android:hint="Repita a senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                app:bootstrapSize="xl"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginTop="5sp"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCadastrarCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CADASTRAR"
                app:bootstrapBrand="success"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:layout_marginTop="10sp"/>

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CANCELAR"
                app:bootstrapBrand="danger"
                app:bootstrapSize="xl"
                app:buttonMode="regular"
                app:showOutline="false"
                app:roundedCorners="true"
                android:layout_marginTop="10sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>